<h2>Sign up</h2>

<form action="/signup" method="post">
<label>User name:
  <input type="text" name="username">
</label>

<label>Email:
  <input type="email" name="email">
</label>

<label>Password:
  <input type="password" name="userPassword">
</label>

<button type="submit">Sign up</button>
<br>
{{#if errorMessage}}
     {{errorMessage}}
{{/if}}
</form>